@page
@model ResetPasswordModel
@{
    ViewData["Title"] = "Reset password";
}
<div class="row">
	<div class="col-3"></div>
	<div class="col-6">
		<h4 class="mt-3">@ViewData["Title"]</h4>
		<section>
			<form method="post">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <input asp-for="Input.Code" type="hidden" />
				<div class="form-group">
					<label asp-for="Input.UserCode" class="form-label mt-4">User Code</label>
					<input asp-for="Input.UserCode" type="text" class="form-control" id="UserCode" aria-describedby="UserCode" placeholder="Enter User Code">					
					<span asp-validation-for="Input.UserCode" class="text-danger"></span>
				</div>
                <div class="form-group">
					<label asp-for="Input.Password" class="form-label mt-4">Password</label>
					<input asp-for="Input.Password" type="password" class="form-control" id="Password" aria-describedby="Password" placeholder="Enter Password">					
					<span asp-validation-for="Input.Password" class="text-danger"></span>
				</div>
                <div class="form-group">
					<label asp-for="Input.ConfirmPassword" class="form-label mt-4">Confirm Password</label>
					<input asp-for="Input.ConfirmPassword" type="password" class="form-control" id="ConfirmPassword" aria-describedby="ConfirmPassword" placeholder="Enter Confirm Password">					
					<span asp-validation-for="Input.ConfirmPassword" class="text-danger"></span>
				</div>
				<button type="submit" class="btn btn-outline-warning mt-3">Reset</button>
			 </form>
		</section>
	</div>
</div>
<div class="mb-10">
	&nbsp;
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
