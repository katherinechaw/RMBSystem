@page
@model ChangePasswordModel
@{
	ViewData["Title"] = "Change password";
	ViewData["ActivePage"] = ManageNavPages.ChangePassword;
}

<h4 class="mt-3">@ViewData["Title"]</h4>
@*<partial name="_StatusMessage" for="StatusMessage" />*@
<div class="row">
	<div class="col-md-6">
		<form id="change-password-form" method="post">
			<div asp-validation-summary="ModelOnly" class="text-danger"></div>
			<div class="form-group">
				<label asp-for="Input.OldPassword" class="form-label mt-4">Old Password</label>
				<input asp-for="Input.OldPassword" type="password" class="form-control" id="OldPassword" aria-describedby="OldPassword" placeholder="Enter Old Password">
				<span asp-validation-for="Input.OldPassword" class="text-danger"></span>
			</div>
			<div class="form-group">
				<label asp-for="Input.NewPassword" class="form-label mt-4">New Password</label>
				<input asp-for="Input.NewPassword" type="password" class="form-control" id="NewPassword" aria-describedby="NewPassword" placeholder="Enter New Password">
				<span asp-validation-for="Input.NewPassword" class="text-danger"></span>
			</div>
			<div class="form-group">
				<label asp-for="Input.ConfirmPassword" class="form-label mt-4">Confirm Password</label>
				<input asp-for="Input.ConfirmPassword" type="password" class="form-control" id="ConfirmPassword" aria-describedby="ConfirmPassword" placeholder="Enter Confirm Password">
				<span asp-validation-for="Input.ConfirmPassword" class="text-danger"></span>
			</div>
			<div class="form-group">
				<button type="submit" class="btn btn-outline-warning mt-3">Update password</button>
			</div>
		</form>
	</div>
</div>
<div class="mb-10">
	&nbsp;
</div>

@section Scripts {
<partial name="_ValidationScriptsPartial" />
}
