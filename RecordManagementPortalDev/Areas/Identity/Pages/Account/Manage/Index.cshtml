@page
@model IndexModel
@{
	ViewData["Title"] = "Profile";
	ViewData["ActivePage"] = ManageNavPages.Index;
}
<h4 class="mt-3">@ViewData["Title"]</h4>
@*<partial name="_StatusMessage" for="StatusMessage" />*@
<div class="row">
	<div class="col-md-6">
		<form id="profile-form" method="post">
			<div asp-validation-summary="ModelOnly" class="text-danger"></div>
			<div class="form-group">
				<label asp-for="Username" class="form-label mt-4">User ID</label>
				<input asp-for="Username" type="text" class="form-control" id="UserID" aria-describedby="UserID" placeholder="Enter User ID" disabled>
			</div>
			<div class="form-group">
				<label asp-for="Input.Name" class="form-label mt-4">User Name</label>
				<input asp-for="Input.Name" type="text" class="form-control" id="Username" aria-describedby="Username" placeholder="Enter User Name" disabled>
			</div>
			<div class="form-group">
				<label asp-for="Input.PhoneNumber" class="form-label mt-4">Phone Number</label>
				<input asp-for="Input.PhoneNumber" type="text" class="form-control" id="PhoneNumber" placeholder="Enter Phone Number">
				<span asp-validation-for="Input.PhoneNumber" class="text-danger"></span>
			</div>
			<div class="form-group">
				<button id="update-profile-button" type="submit" class="btn btn-outline-warning mt-3">Save</button>
			</div>
		</form>
	</div>
</div>
<div class="mb-10">
	&nbsp;
</div>

@section Scripts {
<partial name="_ValidationScriptsPartial" />
}
