@model RecordManagementPortalDev.Controllers.OrderController.ScanDetail
@{
	ViewData["Title"] = "DetailScanPack";
	Layout = "~/Views/Shared/_Layout.cshtml";
}
<h4 class="mt-3">Detail Scan Pack</h4>
<div class="border p-3 mt-4">
	<form method="post" asp-action="UpdateScan">
		<fieldset>
			<div class="row">
				<div class="col-6">
					<div class="form-group row">
						<label asp-for="LogScanPack.FileName" class="col-form-label mt-4 col-sm-4">File Name</label>
						<div class="mt-4 col-sm-8">
							<input asp-for="LogScanPack.FileName" type="text" class="form-control" id="File Name" aria-describedby="File Name" readonly="">
						</div>
					</div>
					<div class="form-group row">
						<label asp-for="LogScanPack.StaffId" class="col-form-label mt-4 col-sm-4">Staff Id</label>
						<div class="mt-4 col-sm-8">
							<input asp-for="LogScanPack.StaffId" type="text" class="form-control" id="StaffId" aria-describedby="Staff Id" readonly="">
						</div>
					</div>
					<div class="form-group row">
						<label asp-for="LogScanPack.ScanDate" class="col-form-label mt-4 col-sm-4">Scan Date</label>
						<div class="mt-4 col-sm-8">
							<input asp-for="LogScanPack.ScanDate" type="text" class="form-control" id="ScanDate" aria-describedby="Scan Date" readonly="">
						</div>
					</div>
					<div class="form-group row">
						<label asp-for="LogScanPack.Remark" class="col-form-label mt-4 col-sm-4">Remark</label>
						<div class="mt-4 col-sm-8">
							<input asp-for="LogScanPack.Remark" type="text" class="form-control" id="Remark" aria-describedby="Remark">
						</div>
					</div>
					<button type="submit" class="btn btn-outline-warning mt-3">Update Scan Job</button>
					<a class="btn btn-outline-light mt-3" href="javascript: history.go(-1)">Back To Log Scan Pack</a>
				</div>
				<div class="col-6">
					<div class="form-group row">
						<label asp-for="ScanResult" class="col-form-label mt-4 col-sm-4">Scan Result</label>
						<div class="mt-4 col-sm-8">
							<textarea asp-for="ScanResult" class="form-control" id="ScanResult" rows="15"></textarea>
						</div>
					</div>
				</div>
			</div>
		</fieldset>
	</form>
</div>
