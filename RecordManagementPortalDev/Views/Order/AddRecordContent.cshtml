							<input asp-for="@Model.JobsDetail.CustCode" class="form-control-plaintext" readonly="" />
						</div>
					</div>	
					<div class="form-group row">
						<label class="col-form-label col-sm-4 mt-2">Record No : </label>
						<div class="col-sm-8 mt-2">
							<input asp-for="@Model.JobsDetail.Cartons" class="form-control-plaintext" readonly="" />
						</div>
					</div>
					<div class="form-group row">
						<label class="col-form-label col-sm-4 mt-2">Description : </label>
						<div class="col-sm-8 mt-2">
							<input asp-for="@Model.JobsDetail.Description" class="form-control-plaintext" readonly="" />
						</div>
					</div>
					<div class="form-group row">
						<label asp-for="@Model.JobsDetail.DeptCode" class="col-form-label col-sm-4 mt-2"> Department Code : </label>
						<div class="col-sm-8 mt-2">
							<input asp-for="@Model.JobsDetail.DeptCode" class="form-control-plaintext" readonly="" />
						</div>
					</div>
					<div class="form-group row">
						<label class="col-form-label col-sm-4 mt-2">Status : </label>
						<div class="col-sm-8 mt-2">
							<input asp-for="@Model.JobsDetail.Status" class="form-control-plaintext" readonly="" />
						</div>
					</div>
					<div class="form-group row">
						<label class="col-form-label col-sm-4 mt-2">File No : </label>
						<div class="col-sm-8 mt-2">
							<input asp-for="@Model.rDetail.FileNo" class="form-control" />
						</div>
					</div>
