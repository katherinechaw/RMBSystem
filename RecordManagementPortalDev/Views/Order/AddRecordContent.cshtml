						<label class="col-form-label col-sm-4 mt-2">Reference 1 : </label>
						<div class="col-sm-8 mt-2">
							<input asp-for="@Model.rDetail.Reference1" class="form-control" />
						</div>
					</div>
					<div class="form-group row">
						<label class="col-form-label col-sm-4 mt-2">Reference 2 : </label>
						<div class="col-sm-8 mt-2">
							<input asp-for="@Model.rDetail.Reference2" class="form-control" />
						</div>
					</div>
					<div class="form-group row">
						<label class="col-form-label col-sm-4 mt-2">Reference 3 : </label>
						<div class="col-sm-8 mt-2">
							<input asp-for="@Model.rDetail.Reference3" class="form-control" />
