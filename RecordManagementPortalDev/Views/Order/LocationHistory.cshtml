@using RecordManagementPortalDev.Data
@using Microsoft.AspNetCore.Identity
@model RecordManagementPortalDev.Controllers.OrderController.LocationHisList
@{
	ViewData["Title"] = "LocationHistory";	
	Layout = "~/Views/Shared/_Layout.cshtml";
}
<style>
	.nth-table {
	}

		.nth-table tr:nth-child(even) {
			background: #444;
		}

		.nth-table tr:nth-child(odd) {
			background: #375a7f;
		}

		.nth-table th {
			padding-top: 13px;
			padding-bottom: 13px;
			background-color: #1d3850;
		}
</style>
<div class="form-group pt-4 text-end">
	<div class="btn-group mt-3">
		
	</div>
</div>
<br />
<h4 class="mt-3">Location History</h4>
<table class="nth-table table table-hover pt-3">
	<thead>
		<tr>
			<th scope="col">No.</th>
			<th scope="col">Customer Code</th>
			<th scope="col">Department Code</th>
			<th scope="col">Carton</th>
			<th scope="col">Location</th>
			<th scope="col">Status</th>
			<th scope="col">Date</th>				
		</tr>
	</thead>
	<tbody id="scanpack">
		@{
			long rowCount = 0;			
		}
		@foreach (var obj in Model?.ListLocHistory)
		{
			rowCount = rowCount + 1;
			<tr>
				<td scope="row">@rowCount</td>
				<td>@obj.CustCode</td>
				<td>@obj.DeptCode</td>
				<td>@obj.Cartons</td>
				<td>@obj.Location</td>
				<td>@obj.Status</td>
				<td>@obj.CreatedDate</td>					
			</tr>
		}
	</tbody>
</table>
<div class="mb-10">
	&nbsp;
</div>
