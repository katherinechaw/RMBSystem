@model RecordManagementPortalDev.Controllers.OrderController.Approve
@{
	ViewData["Title"] = "ApproveOrder";
	Layout = "~/Views/Shared/_Layout.cshtml";
}
<style>
	.nth-table {
	}

		.nth-table tr:nth-child(even) {
			background: #444;
		}

		.nth-table tr:nth-child(odd) {
			background: #375a7f;
		}

		.nth-table th {
			padding-top: 13px;
			padding-bottom: 13px;
			background-color: #1d3850;
		}
</style>
<h4 class="mt-3">Approve Order</h4>
<form method="post" asp-action="ApproveAction">	
	<fieldset>
		<div class="row">
			<div class="col-6">
				<div class="form-group mt-2">
					<h6 class="text-warning">Order Information</h6>
				</div>
				<div class="form-group row">
					<label asp-for="@Model.odRequests.OrderId" class="form-label col-sm-6 mt-2">Order ID</label>
					<div class="col-sm-6 mt-2">
						<input asp-for="@Model.odRequests.OrderId" type="text" class="form-control-plaintext" id="OrderId" readonly="">
					</div>
				</div>
				<div class="form-group row">
					<label asp-for="@Model.odRequests.TransactionDate" class="form-label col-sm-6 mt-2">Request Date</label>
					<div class="col-sm-6 mt-2">
						<input asp-for="@Model.odRequests.TransactionDate" type="date" class="form-control-plaintext" id="RequestDate" readonly="">
					</div>
				</div>
				<div class="form-group row">
					<label asp-for="@Model.username" class="form-label col-sm-6 mt-2">Requester</label>
					<div class="col-sm-6 mt-2">
						<input asp-for="@Model.username" type="text" class="form-control-plaintext" id="Requester" readonly="">
					</div>
				</div>
				<div class="form-group row">
					<label asp-for="@Model.approvername" class="form-label col-sm-6 mt-2">Approver</label>
					<div class="col-sm-6 mt-2">
						<input asp-for="@Model.approvername" type="text" class="form-control-plaintext" id="Approver" readonly="">
					</div>
				</div>
				<div class="form-group row">
					<label asp-for="@Model.backupapprover" class="form-label col-sm-6 mt-2"></label>
					<div class="col-sm-6 mt-2">
						<input asp-for="@Model.backupapprover" type="text" class="form-control-plaintext" id="Requester" readonly="">
					</div>
				</div>
				<div class="form-group row">
					<label asp-for="@Model.odRequests.Remark" class="form-label col-sm-6 mt-2">Remark</label>
					<div class="col-sm-6 mt-2">
						<input asp-for="@Model.odRequests.Remark" type="text" class="form-control-plaintext" id="Remark" readonly="">
					</div>
				</div>
				<div class="form-group row">
					<div class="col-sm-4 mt-2">
						<input type="submit" class="btn btn-outline-warning mt-3" name="submit" value="Approve Order" />
						@*<button type="submit" class="btn btn-outline-warning mt-3" formaction="Accept">Approve Order</button>						*@
					</div>
					<div class="col-sm-4 mt-2">
						<input type="submit" class="btn btn-outline-warning mt-3" name="submit" value="Reject Order" />
						@*<button type="submit" class="btn btn-outline-warning mt-3" fromaction="Reject">Reject Order</button>						*@
					</div>
					<div class="col-sm-4 mt-2">
						<a class="btn btn-outline-light mt-3" href="javascript: history.go(-1)">Back To Transaction</a>			
					</div>
				</div>
			</div>
			<div class="col-6">
			</div>
		</div>
	</fieldset>
</form>

<div class="mb-10">
	&nbsp;
</div>