	function changedate(date)
	{
		var d = new Date(date);
		var formatOptions = { 
		   day:    '2-digit', 
		   month:  '2-digit', 
		   year:   'numeric',
		   //hour:   '2-digit', 
		   //minute: '2-digit',
		   //second: '2-digit',
		   //hour12: true 
		};
		var dateString = d.toLocaleDateString('en-GB', formatOptions);
		// => "02/17/2017, 11:32:00 PM"

		dateString = dateString.replace(',', '')
