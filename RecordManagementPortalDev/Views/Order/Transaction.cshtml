@using RecordManagementPortalDev.Data
@using Microsoft.AspNetCore.Identity
@model RecordManagementPortalDev.Controllers.OrderController.NewGroupedCustDept
@inject SignInManager<ApplicationUser> SignInManager
@inject UserManager<ApplicationUser> UserManager
@{
	var user = await UserManager.GetUserAsync(User);	
}
@{
	ViewData["Title"] = "Transaction";
	Pager pager = new Pager();
	int pageNum = 0;
	if (ViewBag.Pager != null)
	{
		pager = ViewBag.Pager;
		pageNum = pager.CurrentPage;
	}
	Layout = "~/Views/Shared/_Layout.cshtml";
}
<style>
	.nth-table {
	}

		.nth-table tr:nth-child(even) {
			background: #444;
		}

		.nth-table tr:nth-child(odd) {
			background: #375a7f;
		}

		.nth-table th {
			padding-top: 13px;
			padding-bottom: 13px;
			background-color: #1d3850;
		}

		.disabled-link {
			pointer-events: none;
			cursor: not-allowed;
		}
</style>
<div id="regis" role="tabpanel">
	<form asp-controller="Order" asp-action="Transaction">
	<div class="form-group p-3 text-end">		
			<div class="btn-group mt-3">
				<input type="text" class="form-control" value="@ViewData["keywords"]" name="keywords" placeholder="Customer Code or Order Number" aria-label="Keywords" aria-describedby="button-search">		
				<input type="submit" class="btn btn-outline-warning" value="Search" />
			</div>			
	</div>
	<div class="border form-group p-3">
		<div class="form-group row mt-3">
			@if (user.UserRole == "RMB Super Admin")
			{
				<div class="col-sm-5">
					<div class="row">
						<label for="CustomerCode" class="col-sm-4 col-form-label">Choose Customer Code</label>
						<div class="col-sm-6">
							<select class="form-select" id="ULCustomerCode" name="CustomerCode" asp-controller="Customer" asp-action="UserInfo" asp-items="@Model?.CustomerList">
								<option value="">--All Customer--</option>
							</select>
							<input type="hidden" name="CustomerCode" />
						</div>
					</div>
				</div>
				<div class="col-sm-5">
					<div class="row">
						<label for="ULDepartmentCode" class="col-form-label col-sm-4">Choose Department Code</label>
						<div class="col-sm-6">
							<select class="form-select" id="ULDepartmentCode" name="DepartmentCode" asp-controller="Customer" asp-action="UserInfo" asp-items="@Model?.DepartmentList">
								<option value="">--All Departments--</option>
							</select>
							<input type="hidden" name="DepartmentCode" value="@ViewData["DepartmentCode"]" />
						</div>
					</div>
				</div>
				<div class="col-sm-2">
					<input type="submit" class="btn btn-outline-warning" value="Search" />
				</div>
			}
			else
			{
				<div class="col-sm-5">
					<div class="row">
						<label for="CustomerCode" class="col-sm-4 col-form-label">Customer Code</label>
						<div class="col-sm-6">
							<input value="@user.CustomerCode" type="text" class="form-control-plaintext" id="ULCustomerCode" aria-describedby="Customer Code" readonly="">
						</div>
					</div>
				</div>
				<div class="col-sm-5">
					<div class="row">
						<label for="ULDepartmentCode" class="col-form-label col-sm-4">Choose Department Code</label>
						<div class="col-sm-6">
							<select class="form-select" id="ULDepartmentCode" name="DepartmentCode" asp-controller="Customer" asp-action="UserInfo" asp-items="@Model?.DepartmentList">
								<option value="">--All Departments--</option>
							</select>
							<input type="hidden" name="DepartmentCode" value="@ViewData["DepartmentCode"]" />
						</div>
					</div>
				</div>
				<div class="col-sm-2">
					<input type="submit" class="btn btn-outline-warning" value="Search" />
				</div>
			}
		</div>
	</div>
	</form>	
	<br />
	<h4 class="mt-3">Transaction</h4>
	<table class="nth-table table table-hover pt-3">
		<thead>
			<tr>
				<th scope="col">No.</th>
				<th scope="col">Customer Code</th>
				<th scope="col">Order Number</th>
				<th scope="col">Requester</th>
				<th scope="col">Status</th>
				<th scope="col">Order Type</th>
				<th scope="col">Quantity</th>
				<th scope="col">Order Date</th>
				@if (user.UserRole == "Admin" || user.UserRole == "Approver")
				{
					<th style="width:5%"></th>
				}
				<th style="width:5%"></th>
			</tr>
		</thead>
		<tbody id="order">
			@{
				long rowCount = 0;
				if (pager.CurrentPage > 1)
				{
					rowCount = (pager.CurrentPage - 1) * pager.PageSize;
				}
			}
			@foreach (var obj in Model?.OrderList)
			{
				rowCount = rowCount + 1;
				<tr>
					<td scope="row">@rowCount</td>
					<td>@obj.CustomerCode</td>
					<td>@obj.OrderId</td>
					<td>@obj.ContactPerson</td>
					<td>@obj.OrderStatus</td>
					<td>@obj.OrderType</td>
					<td>@obj.CartonQty</td>
					<td>@obj.OrderDate.ToString("dd/MM/yyyy")</td>
					@if (user.UserRole == "Admin" || user.UserRole == "Approver")
					{
						if (@obj.OrderStatus == "Pending" && @obj.ApproverId == "Yes")
						{
							<td><a asp-controller="Order" asp-action="ApproveOrder" class="btn btn-outline-info" role="button" aria-disabled="true" asp-route-id="@obj.OrderId"><i class="bi bi-clipboard2-check"></i></a></td>
						}
						else
						{
							<td><a asp-controller="Order" asp-action="ApproveOrder" class="btn btn-outline-info disabled-link" role="button" aria-disabled="true" asp-route-id="@obj.OrderId"><i class="bi bi-clipboard2-check"></i></a></td>						
						}
					}
					<td><a asp-controller="Order" asp-action="DetailOrder" class="btn btn-outline-info" role="button" aria-disabled="true" asp-route-id="@obj.Id"><i class="bi bi-ticket-detailed-fill"></i></a></td>
				</tr>
			}
		</tbody>
	</table>
	<div>
		@if (pager.TotalPages > 0)
		{
			<ul class="pagination justify-content-end">
				<div class="pagination" style="margin-left: 400px">
					Page @(pager.TotalPages < pager.CurrentPage ? 0 : pager.CurrentPage) of @pager.TotalPages
				</div>
			</ul>
			<ul class="pagination justify-content-end">
				@if (pager.CurrentPage > 1)
				{
					<li class="page-item">
						<a class="page-link" asp-controller="Order" asp-action="Transaction" asp-route-keywords="@ViewData["keywords"]" asp-route-CustomerCode="@ViewData["CustomerCode"]" asp-route-DepartmentCode="@ViewData["DepartmentCode"]" asp-route-page="1">First</a>
					</li>
					<li class="page-item">
						<a class="page-link" asp-controller="Order" asp-action="Transaction" asp-route-keywords="@ViewData["keywords"]" asp-route-CustomerCode="@ViewData["CustomerCode"]" asp-route-DepartmentCode="@ViewData["DepartmentCode"]" asp-route-page="@(pager.CurrentPage -1)">&laquo;</a>
					</li>
				}
				@{
					var pageSetting = 1;
					var pages = pager.TotalPages >= 5 ? ((pager.CurrentPage + 4) < pager.TotalPages ? (pager.CurrentPage + 4) : pager.TotalPages) : ((pager.CurrentPage + 4) < pager.TotalPages ? (pager.CurrentPage + 4) : pager.TotalPages);
				}
				@for (var pge = pager.CurrentPage; pge <= pages; pge++)
				{
					if (pageSetting != 2 && pager.TotalPages >= 5 && (pager.CurrentPage + 4) > pager.TotalPages)
					{
						pageSetting = 2;
						pge = pager.TotalPages - 4;
					}
					else if (pageSetting != 2 && pager.TotalPages < 5)
					{
						pageSetting = 2;
						pge = 1;
					}
					<li class="page-item @(pge == pager.CurrentPage ? "active":"")">
						<a class="page-link" asp-controller="Order" asp-action="Transaction" asp-route-keywords="@ViewData["keywords"]" asp-route-CustomerCode="@ViewData["CustomerCode"]" asp-route-DepartmentCode="@ViewData["DepartmentCode"]" asp-route-page="@pge">@pge</a>
					</li>
				}
				@if (pager.CurrentPage < pager.TotalPages)
				{
					<li class="page-item">
						<a class="page-link" asp-controller="Order" asp-action="Transaction" asp-route-keywords="@ViewData["keywords"]" asp-route-CustomerCode="@ViewData["CustomerCode"]" asp-route-DepartmentCode="@ViewData["DepartmentCode"]" asp-route-page="@(pager.CurrentPage +1)">&raquo;</a>
					</li>
					<li class="page-item">
						<a class="page-link" asp-controller="Order" asp-action="Transaction" asp-route-keywords="@ViewData["keywords"]" asp-route-CustomerCode="@ViewData["CustomerCode"]" asp-route-DepartmentCode="@ViewData["DepartmentCode"]" asp-route-page="@(pager.TotalPages)">Last</a>
					</li>
				}
			</ul>
		}
		<h1>@ViewBag.msg</h1>
	</div>
</div>

<div class="mb-10">
	&nbsp;
</div>


