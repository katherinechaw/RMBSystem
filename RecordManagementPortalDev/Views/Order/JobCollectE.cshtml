		$("#colempbarcode").show();		

		$("#inventory tr").each(function () {
			var row = $(this);
			if (row.find('input[type="checkbox"]').prop('checked'))
			{
			html += "<tr> \
			<td>" + counter++ + "</td> \
			<td>" + department + "</td>\
			<td>" + row.find("TD").eq(1).html() + "</td> \
			<td>" + "<input type='date' class='form-control' placeholder='Destruction Date'>" + "</td> \
