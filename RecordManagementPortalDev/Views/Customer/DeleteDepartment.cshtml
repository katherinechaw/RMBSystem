@model RecordManagementPortalDev.Models.Department
@{
    ViewData["Title"] = "DeleteDepartment";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<h4 class="mt-3">Delete Department</h4>
<div class="border p-3 mt-4">
	<form method="post" asp-action="DeleteDepartment">
		<input asp-for="Id" hidden />
		<fieldset>					
			<div class="row">
				<div class="col-6">
					<div class="form-group">
						<label asp-for="CustomerCode" class="form-label mt-4">Customer Code</label>
						<input asp-for="CustomerCode" type="text" class="form-control" id="CustomerCode" aria-describedby="Customer Code" readonly="" style="background-color:#adb5bd;">						
					</div>
					<div class="form-group">
						<label asp-for="DepartmentCode" class="form-label mt-4">Department Code</label>
						<input asp-for="DepartmentCode" type="text" class="form-control" id="DepartmentCode" aria-describedby="Department Code" readonly="" style="background-color:#adb5bd;">						
					</div>
					<div class="form-group">
						<label asp-for="Description" class="form-label mt-4">Description</label>
						<input asp-for="Description" type="text" class="form-control" id="Description" aria-describedby="Description" readonly="" style="background-color:#adb5bd;">						
					</div>
					<button type="submit" class="btn btn-outline-warning mt-3">Delete</button>
					<a class="btn btn-outline-light mt-3 mx-4" href="javascript: history.go(-1)">Back To Department List</a>
				</div>
				<div class="col-6">
					
				</div>
			</div>
		</fieldset>
	</form>	
</div>
<div class="mb-10">
	&nbsp;
</div>

