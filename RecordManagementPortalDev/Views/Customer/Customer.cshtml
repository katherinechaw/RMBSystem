@model RecordManagementPortalDev.Models.Customer
@{
	ViewData["Title"] = "Customer";
	Layout = "~/Views/Shared/_Layout.cshtml";
}
<form>
	<fieldset>		
		<legend class="mt-3">Welcome to Mitsui-soko (Singapore) Pte Ltd.</legend>		
		<div class="form-group row">
			<label asp-for="CustomerCode" class="col-sm-2 col-form-label">Company Code</label>
			<div class="col-sm-10">
				<input asp-for="CustomerCode" type="text" class="form-control-plaintext" id="CustomerCode" aria-describedby="Customer Code" readonly="">
			</div>
		</div>
		<div class="form-group row">
			<label asp-for="CustomerName" class="col-sm-2 col-form-label">Company Name</label>
			<div class="col-sm-10">
				<input asp-for="CustomerName" type="text" class="form-control-plaintext" id="CustomerName" aria-describedby="Customer Name" readonly="">
			</div>
		</div>
		<div class="form-group row">
			<label asp-for="Address1" class="col-sm-2 col-form-label">Company Address</label>
			<div class="col-sm-10">
				<input asp-for="Address1" type="text" class="form-control-plaintext" id="Address1" aria-describedby="Address1" readonly="">
			</div>
			<label for="Address2" class="col-sm-2 col-form-label"> </label>
			<div class="col-sm-10">
				<input asp-for="Address2" type="text" class="form-control-plaintext" id="Address2" aria-describedby="Address2" readonly="">
			</div>
			<label for="Address3" class="col-sm-2 col-form-label"> </label>
			<div class="col-sm-10">
				<input asp-for="Address3" type="text" class="form-control-plaintext" id="Address3" aria-describedby="Address3" readonly="">
			</div>
			<label for="Address4" class="col-sm-2 col-form-label"> </label>
			<div class="col-sm-10">
				<input asp-for="Address4" type="text" class="form-control-plaintext" id="Address4" aria-describedby="Address4" readonly="">
			</div>
		</div>
		<div class="form-group row">
			<label asp-for="Email" class="col-sm-2 col-form-label">Company Email</label>
			<div class="col-sm-10">
				<input asp-for="Email" type="text" class="form-control-plaintext" id="Email" aria-describedby="Email" readonly="">
			</div>
		</div>
		<div class="form-group row">
			<label asp-for="Billing" class="col-sm-2 col-form-label">Company Billing</label>
			<div class="col-sm-10">
				<input asp-for="Billing" type="text" class="form-control-plaintext" id="Billing" aria-describedby="Billing" readonly="">
			</div>
		</div>	
	</fieldset>
</form>
<div class="mb-10">
	&nbsp;
</div>

<a asp-controller="Customer" asp-action="RIC" class="btn btn-outline-warning mb-3" role="button" aria-disabled="true">Record Index Card</a>

<a asp-controller="Customer" asp-action="UserGuide" class="btn btn-outline-warning mx-4 mb-3" role="button" aria-disabled="true">User Guid</a>

<a asp-controller="Customer" asp-action="FAQ" class="btn btn-outline-warning mb-3" role="button" aria-disabled="true">FAQ</a>

