@model RecordManagementPortalDev.Models.BillRateMaster
@{
	ViewData["Title"] = "DeleteCustomer";
	Layout = "~/Views/Shared/_Layout.cshtml";
}
<h4 class="mt-3">Delete Customer  Bill Rate</h4>
<div class="border p-3 mt-4">
	<form method="post" asp-action="DeleteCustBillRate">
		<input asp-for="Id" hidden />
		<fieldset>
			<div class="row">
				<div class="col-6">
					<div class="form-group">
						<label asp-for="CustomerCode" class="form-label mt-4">Customer Code</label>
						<input asp-for="CustomerCode" type="text" class="form-control" id="CustomerCode" aria-describedby="Customer Code" readonly="" style="background-color:#adb5bd;">
					</div>
					<div class="form-group">
						<label asp-for="BillStartDate" class="form-label mt-4">Contract Start Date</label>
						<input asp-for="BillStartDate" type="date" class="form-control" id="BillStartDate" aria-describedby="Contract Start Date" readonly="" style="background-color:#adb5bd;">
					</div>
					<div class="form-group">
						<label asp-for="BillExpDate" class="form-label mt-4">Contract Expire Date</label>
						<input asp-for="BillExpDate" type="text" class="form-control" id="BillExpDate" aria-describedby="Contract Expire Date" readonly="" style="background-color:#adb5bd;">
					</div>					
					<br />
					<button type="submit" class="btn btn-outline-warning mt-3">Delete</button>
					<a class="btn btn-outline-light mt-3 mx-4" href="javascript: history.go(-1)">Back To Customer Billing List</a>
				</div>
				<div class="col-6">
				</div>
			</div>
		</fieldset>
	</form>
</div>
<div class="mb-10">
	&nbsp;
</div>

