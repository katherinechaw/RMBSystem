@model RecordManagementPortalDev.Controllers.CustomerController.ApprovalUsers
@{
    ViewData["Title"] = "DeleteApproval";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<h4 class="mt-3">Delete Approval Setup</h4>
<div class="border p-3 mt-4">
	<form method="post" asp-action="DeleteApproval">
		<input asp-for="Id" hidden />
		<fieldset>					
			<div class="row">
				<div class="col-6">
					<div class="form-group">
						<label asp-for="CustomerCode" class="form-label mt-4">Customer Code</label>
						<input asp-for="CustomerCode" type="text" class="form-control" readonly="" style="background-color:#adb5bd;">						
					</div>
					<div class="form-group">
						<label asp-for="UserName" class="form-label mt-4">User</label>
						<input asp-for="UserName" type="text" class="form-control" readonly="" style="background-color:#adb5bd;">						
					</div>
					<div class="form-group">
						<label asp-for="ApproverName" class="form-label mt-4">Approver</label>
						<input asp-for="ApproverName" type="text" class="form-control" readonly="" style="background-color:#adb5bd;">						
					</div>
					<div class="form-group">
						<label asp-for="SubApproverName" class="form-label mt-4">Backup Approver</label>
						<input asp-for="SubApproverName" type="text" class="form-control" readonly="" style="background-color:#adb5bd;">						
					</div>
					<div class="form-group">
						<label asp-for="Email" class="form-label mt-4">Email</label>
						<input asp-for="Email" type="text" class="form-control" readonly="" style="background-color:#adb5bd;">						
					</div>
					<button type="submit" class="btn btn-outline-warning mt-3">Delete</button>
					<a class="btn btn-outline-light mt-3 mx-4" href="javascript: history.go(-1)">Back To Approval List</a>
				</div>
				<div class="col-6">
					
				</div>
			</div>
		</fieldset>
	</form>	
</div>
<div class="mb-10">
	&nbsp;
</div>


