@model RecordManagementPortalDev.Data.ApplicationUser
@{
	ViewData["Title"] = "DeleteUser";
	Layout = "~/Views/Shared/_Layout.cshtml";
}
<h4 class="mt-3">Delete User</h4>
<div class="border p-3 mt-4">
	<form method="post" asp-action="DeleteUser">
		<input asp-for="Id" hidden />
		<fieldset>
			<div class="row">
				<div class="col-6">
					<div class="form-group">
						<label asp-for="CustomerCode" class="form-label mt-4">Customer Code</label>
						<input asp-for="CustomerCode" type="text" class="form-control" id="CustomerCode" aria-describedby="Customer Code" readonly="" style="background-color:#adb5bd;">						
					</div>
					<div class="form-group">
						<label asp-for="DepartmentCode" class="form-label mt-4">Department Code</label>
						<input asp-for="DepartmentCode" type="text" class="form-control" id="DepartmentCode" aria-describedby="Department Code" readonly="" style="background-color:#adb5bd;">						
					</div>
					<div class="form-group">
						<label asp-for="UserCode" class="form-label mt-4">User Code</label>
						<input asp-for="UserCode" type="text" class="form-control" id="UserCode" aria-describedby="User Code" readonly="" style="background-color:#adb5bd;">						
					</div>
					<div class="form-group">
						<label asp-for="Name" class="form-label mt-4">User Name</label>
						<input asp-for="Name" type="text" class="form-control" id="UserName" aria-describedby="User Name" readonly="" style="background-color:#adb5bd;">						
					</div>
					<div class="form-group">
						<label asp-for="UserRole" class="form-label mt-4">User Role</label>
						<input asp-for="UserRole" type="text" class="form-control" id="UserRole" aria-describedby="User Role" readonly="" style="background-color:#adb5bd;">						
					</div>
					<div class="form-group">
						<label asp-for="UserLevel" class="form-label mt-4">User Level</label>
						<input asp-for="UserLevel" type="text" class="form-control" id="Address4" aria-describedby="User Level" readonly="" style="background-color:#adb5bd;">						
					</div>
					<div class="form-group">
						<label asp-for="Email" class="form-label mt-4">Email</label>
						<input asp-for="Email" type="text" class="form-control" id="Email" aria-describedby="Email" readonly="" style="background-color:#adb5bd;">						
					</div>
					<br />
					<button type="submit" class="btn btn-outline-warning mt-3">Delete</button>
					<a class="btn btn-outline-light mt-3 mx-4" href="javascript: history.go(-1)">Back To User List</a>
				</div>
				<div class="col-6">
					
				</div>
			</div>
		</fieldset>
	</form>
</div>
<div class="mb-10">
	&nbsp;
</div>
