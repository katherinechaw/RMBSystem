@model RecordManagementPortalDev.Models.Contact
@{
	ViewData["Title"] = "Contact";
	Layout = "~/Views/Shared/_BeforeLoginLayout.cshtml";
}
<div>
	<h4 class="mt-3">Contact Us</h4>
	<div class="border p-3 mt-4">
	<form method="post" asp-action="Contact">
		<fieldset>
			<div class="row">
				<div class="col-6">
					<div class="form-group">
						<label asp-for="Name" class="form-label mt-4">Name</label>
						<input asp-for="Name" type="text" class="form-control" placeholder="Enter Name">						
						<span asp-validation-for="Name" class="text-danger"></span>
					</div>
					<div class="form-group">
						<label asp-for="CompanyName" class="form-label mt-4">Company Name</label>
						<input asp-for="CompanyName" type="text" class="form-control" placeholder="Enter Company Name">						
						<span asp-validation-for="CompanyName" class="text-danger"></span>
					</div>
					<div class="form-group">
						<label asp-for="Email" class="form-label mt-4">Email</label>
						<input asp-for="Email" type="email" class="form-control" placeholder="Enter Email">						
						<span asp-validation-for="Email" class="text-danger"></span>
					</div>
					<div class="form-group">
						<label asp-for="Phone" class="form-label mt-4">Phone No</label>
						<input asp-for="Phone" type="text" class="form-control" placeholder="Enter Phone No.">						
					</div>
					<div class="form-group">
						<label asp-for="Messages" class="form-label mt-4">Messages</label>
						<textarea asp-for="Messages" class="form-control" rows="4"></textarea>
						<span asp-validation-for="Messages" class="text-danger"></span>
					</div>
					<div class="form-group">
						<button type="submit" class="btn btn-outline-warning mt-3">Send Us Your Inquiry</button><br />
						<span class="text-danger">@ViewData["success"]</span>
					</div>
				</div>
				<div class="col-6">
					<div class="form-group">
						<h5>Address</h5>
						<hr />
						<h5>Mitsui-Soko (Singapore) Pte. Ltd.</h5>
						<address>
							<i class="icon-map-marker"></i>No.2 Pioneer Sector Lane,<br />
							Singapore 628321<br />
							<i class="icon-phone"></i>(65) 6227-6935<br />
							<i class="icon-print"></i>(65) 6227-6936<br />
						</address>	
						<div style="display: block; height: 50px;">
							&nbsp;
						</div>
					</div>					
				</div>
			</div>
			<div class="row">
			</div>
		</fieldset>
	</form>
</div>
</div>
